= render 'layouts/per_page', per_page: 40, object_count: @entries.total_count

%table.table.table-striped
  %thead
    %tr
      = th_sort_field @order, 'entries.name', 'Entry Name', extra_class: 'nowrap'
      = th_sort_field @order, 'entries.billing_date', 'Billing Date', extra_class: 'nowrap'
      = th_sort_field @order, 'entries.amount', 'Amount', extra_class: 'nowrap'
      %th.center Charged
      %th Charge Type
      %th Account
  %tbody
    - @entries.each do |entry|
      %tr
        %td= link_to entry.name, entry
        %td= simple_date entry.billing_date
        %td.text-right= entry.amount.to_currency
        %td.center= simple_check entry.charged?
        %td= link_to entry.charge_type.name, entry.charge_type
        %td= link_to entry.charge_type.account.name, entry.charge_type.account

.center= paginate @entries, theme: 'bootstrap'
