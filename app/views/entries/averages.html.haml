- @title = "Average Spending"

- content_for :header, @title

.dashboard-container.dashboard-table
  %table.table.table-striped.table-borderless.table-hover.table-sticky
    %thead
      %tr
        %th.text-center Total Expenditures
        %th.text-center Avg Per Day
        %th.text-center Avg Per Month
        %th.text-center Avg Per Year
    %tbody
      %tr
        %td.text-center= current_user.total_expenditures.to_currency
        %td.text-center= current_user.average_expenditures_per_day
        %td.text-center= current_user.average_expenditures_per_month
        %td.text-center= current_user.average_expenditures_per_year
