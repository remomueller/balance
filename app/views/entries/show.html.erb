<% @title = "Entry: #{@entry.name}" %>

<h1><%= @title %></h1>

<%= link_to image_tag('gentleface/16/doc_edit.png', alt: '') + "Edit Entry", edit_entry_path(@entry), class: 'button' %>
<%= link_to image_tag('gentleface/16/doc_delete.png', alt: '') + "Delete Entry", @entry, confirm: "Are you sure you want to delete Entry #{@entry.name}?", method: :delete, class: 'button negative' %>
<%= link_to image_tag('gentleface/16/folder_open.png', alt: '') + "View All Entries", entries_path, class: 'button' %>
<%= link_to image_tag('gentleface/16/clipboard_copy.png', alt: '') + "Copy Entry", copy_entry_path(@entry), class: 'button' %>

<div style="clear:both"></div>

<div class="frame">
  <table class="blank padded" style="width:100%"><col width="25%" />
    <tr>
      <td style="vertical-align:top">
        <p>
          <b>Billing Date:</b>
          <%= simple_date(@entry.billing_date) %>
        </p>

        <p>
          <b>Amount:</b>
          <%= @entry.amount.to_currency %>
        </p>

        <p>
          <b>Charged:</b>
          <%= check_box_tag 'entry', 'charged', @entry.charged?, disabled: true %>
        </p>

        <p>
          <b>Charge Type:</b>
          <%= @entry.charge_type.full_name %>
        </p>
      </td>
      <td style="vertical-align:top">
        <p>
          <b>Description:</b>
          <pre><%= @entry.description %></pre>
        </p>
      </td>
    </tr>
  </table>
</div>
