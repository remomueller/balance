<% @title = 'Calendar' %>

<%= form_tag calendar_entries_path, remote: true, method: :get, id: 'calendar-form', data: { object: 'form-load' } do %>
  <div class="row">
    <div class="span2">
      <h3 id="calendar-title"><%= render partial: 'calendar_title' %></h3>
    </div>
    <div class="span3">
      <div class="btn-group">
        <%= link_to '&larr;'.html_safe, '#', style: 'text-decoration:none', title: 'Previous Month', class: 'btn', data: { object: 'calendar-previous-month' } %>
        <%= link_to 'Today', '#', class: 'btn', data: { object: 'calendar-today' } %>
        <%= link_to '&rarr;'.html_safe, '#', style: 'text-decoration:none', title: 'Next Month', class: 'btn', data: { object: 'calendar-next-month' } %>
      </div>
    </div>
    <div class="span3" style="text-align:center">
      <%= text_field_tag :selected_date, @selected_date.strftime('%m/%d/%Y'), class: 'datepicker', style: 'width:80px' %>
    </div>
  </div>
<% end %>

<div id="month-breakdown" class="frame">
  <br /><center style="background-color:transparent"><%= image_tag "contour/ajax-loader.gif" %></center>
</div>

<%= render partial: 'new_entry_dialog' %>

<div id="spending"></div>
