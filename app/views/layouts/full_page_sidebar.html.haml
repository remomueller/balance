!!!
%html{ lang: "en" }
  %head
    %meta{ charset: "utf-8" }
    %meta{ content: "IE=Edge,chrome=1", http: { equiv: "X-UA-Compatible" } }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1, shrink-to-fit=no" }
    = render "layouts/meta/general"
    -# Don't cache any pages
    %meta{ name: "turbolinks-cache-control", content: "no-cache" }
    %title= [@title, ENV["website_name"]].compact.join(" - ").html_safe
    = favicon_link_tag
    = csrf_meta_tags
    = stylesheet_link_tag "application", media: "all", data: { turbolinks_track: "reload" }
    = javascript_include_tag "application", data: { turbolinks_track: "reload" }
    = javascript_tag "var root_url=\"#{request.script_name + "/"}\";"
  - @random_theme ? render("themes/random") : render("themes/theme")
  %body#top.full-page{ class: @theme ? "theme-#{@theme}-bg" : nil }
    = render "layouts/flash_bar"
    #top-menu.top-menu= render "layouts/menu", menu: @theme ? "menu-#{@theme}" : nil, container: "container-fluid"
    .header-container
      .container-fluid
        %h1.page-heading
          = yield :header
    - if content_for?(:tabs)
      .header-tabs{ class: "#{"header-tabs-no-breadcrumbs" unless content_for?(:breadcrumbs)}" }
        .container-fluid
          = yield :tabs
    - if content_for?(:breadcrumbs)
      .breadcrumb-container
        .container-fluid
          = yield :breadcrumbs
    .row.no-gutters.flex-md-nowrap
      = render "sidebar/mini"
      = yield(:sidebar)
      %main.col.p-3{ role: "main" }
        = yield
    = yield :footer
    = render "layouts/footer", footer: @theme ? "footer-#{@theme}" : nil, container: "container-fluid"
