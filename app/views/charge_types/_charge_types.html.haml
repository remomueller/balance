= render 'contour/layouts/per_page', per_page: 40, object_count: @charge_types.total_count

%table.table.table-striped
  %thead
    %tr
      %th Charge Type Name
      %th Account
  %tbody
    - @charge_types.each do |charge_type|
      %tr
        %td= link_to charge_type.name, charge_type
        %td= link_to charge_type.account.name, charge_type.account

.center= paginate @charge_types, theme: 'contour'
