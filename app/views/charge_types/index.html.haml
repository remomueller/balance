- @title = 'Charge Types'

- content_for :header do
  .background-gradient
  .header-container
    .container
      %h1.page-heading
        .pull-right
          = link_to plus_or('New Charge Type'), new_charge_type_path, class: 'btn btn-accent btn-shadow'
          .per-page= render 'layouts/per_page', per_page: 40, object_count: @charge_types.total_count
        = @title
        = render 'search/toggle'

= render 'search/simple', url: charge_types_path

%table.table.table-striped.shadow
  %thead
    %tr
      %th Charge Type Name
      %th Account
  %tbody
    - @charge_types.each do |charge_type|
      %tr
        %td= link_to charge_type.name, charge_type
        %td= link_to charge_type.account.name, charge_type.account

.center= paginate @charge_types, theme: 'bootstrap'
