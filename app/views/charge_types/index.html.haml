- @title = 'Charge Types'
.page-header
  %h1
    = @title
    = link_to 'Create Charge Type', new_charge_type_path, class: 'btn btn-xs btn-primary'

= form_tag charge_types_path, method: :get, class: 'form-inline' do
  = hidden_field_tag :order, params[:order]
  = text_field_tag 'search', params[:search], class: 'form-control'
  = submit_tag 'Search', class: 'btn btn-primary', name: nil
  = link_to 'Reset', charge_types_path, class: 'btn btn-default'

= render 'charge_types/charge_types'
