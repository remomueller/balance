<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for(@charge_type, html: { class: 'form-horizontal' }) do |f| %>
  <% if @charge_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@charge_type.errors.count, "error") %> prohibited this charge type from being saved:</h2>

      <ul>
      <% @charge_type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, style: "width:95%" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :counts_towards_spending, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.check_box :counts_towards_spending %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :account_id, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.select :account_id, [["----", nil]]  + current_user.accounts.order(:name).collect{|a| [a.name, a.id]} %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
