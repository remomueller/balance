<% @title = "Charge Type: #{@charge_type.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Edit Charge Type", edit_charge_type_path(@charge_type), class: 'btn btn-mini' %>
    <%= link_to "Delete Charge Type", @charge_type, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: "Are you sure you want to delete Charge Type #{@charge_type.name}?" } %>
    <%= link_to "View Charge Types", charge_types_path, class: 'btn btn-mini' %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Account</dt>
  <dd><%= link_to @charge_type.account.name, @charge_type.account %></dd>

  <dt>Counts Towards Spending</dt>
  <dd><%= check_box_tag 'counts', 'towards_spending', @charge_type.counts_towards_spending?, disabled: true %></dd>

  <dt>Total Spent</dt>
  <dd><%= @charge_type.total_spent.to_currency %></dd>
</dl>
