<% @title = "Charge Type: #{@charge_type.name}" %>

<h1><%= @title %></h1>

<%= link_to image_tag('contour/edit.png', alt: '') + "Edit Charge Type", edit_charge_type_path(@charge_type), class: 'button' %>
<%= link_to image_tag('contour/delete.png', alt: '') + "Delete Charge Type", @charge_type, confirm: "Are you sure you want to delete Charge Type #{@charge_type.name}?", method: :delete, class: 'button negative' %>
<%= link_to image_tag('contour/mydocuments.png', alt: '') + "View All Charge Types", charge_types_path, class: 'button' %>

<div style="clear:both"></div>

<p>
  <b>Account:</b>
  <%= link_to @charge_type.account.name, @charge_type.account %>
</p>

<p>
  <b>Counts Towards Spending:</b>
  <%= check_box_tag 'counts', 'towards_spending', @charge_type.counts_towards_spending?, disabled: true %>
</p>

<p>
  <b>Total Spent:</b>
  <%= @charge_type.total_spent.to_currency %>
</p>
