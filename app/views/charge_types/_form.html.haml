.page-header
  %h1= @title

= form_for @charge_type, html: { class: 'form-horizontal' } do |f|
  - if @charge_type.errors.any?
    .callout.callout-danger
      %strong
        = pluralize @charge_type.errors.count, 'error'
        prohibited this charge type from being saved

      %ul
        - @charge_type.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :name, nil, class: 'col-md-2 control-label'
    .col-md-10
      = f.text_field :name, class: 'form-control'

  .form-group
    .col-md-offset-2.col-md-10
      .checkbox
        %label
          = f.check_box :counts_towards_spending
          Counts Towards Spending

  .form-group
    = f.label :account_id, nil, class: 'col-md-2 control-label'
    .col-md-10
      = f.select :account_id, [['----', nil]]  + current_user.accounts.order(:name).pluck(:name, :id), {}, class: 'form-control'

  .form-group
    .col-md-offset-2.col-md-10
      = f.submit nil, class: 'btn btn-primary'
      = cancel
