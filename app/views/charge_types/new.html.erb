<% @title = 'New Charge Type' %>
<div class="title">
  <%= @title %>
  <%= link_to 'view all', charge_types_path %>
</div>
<div class="content">
  <div class="form">
    <%= form_for @charge_type do |f| %>
      <%= render :partial => 'form' %>
      <div class="submit"><%= f.submit 'Create', :disable_with => 'Creating...' %> or <%= cancel %></div>
    <% end %>
  </div>
</div>