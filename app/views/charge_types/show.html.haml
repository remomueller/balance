- @title = @charge_type.name

- content_for :header do
  .float-right
    = render "layouts/edit_delete_dropdown", edit_url: edit_charge_type_path(@charge_type), delete_url: @charge_type, delete_confirmation: "Delete #{@charge_type.name}?"
  = @title
= render "internal/tabs"
- content_for :breadcrumbs do
  %ol
    %li= link_to "charge types", charge_types_path
    %li.breadcrumb-muted= @charge_type.name.to_s.downcase
- content_for :sidebar, render("internal/sidebar_setup")

.dashboard-container
  = render "forms/horizontal/show/generic", title: "Account", content: link_to(@charge_type.account.name, @charge_type.account)
  = render "forms/horizontal/show/check_box", object: @charge_type, key: :counts_towards_spending
  = render "forms/horizontal/show/generic", title: "Total spent", content: @charge_type.total_spent.to_currency
