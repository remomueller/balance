- rows = 7 unless defined?(rows)
.form-group.row
  = form.label key, defined?(key_name) ? key_name : nil, class: "col-md-2 col-form-label"
  .col-md-10
    = form.text_area key, rows: rows, class: "form-control#{" is-invalid" if object.errors[key].present?}", value: defined?(value) ? value : object.send(key), maxlength: defined?(maxlength) ? maxlength : nil, data: defined?(data) ? data : nil
    - if defined?(key_name)
      = render "forms/invalid_feedback", object: object, key: key, key_name: key_name
    - else
      = render "forms/invalid_feedback", object: object, key: key
    = render "forms/help_text", help_text: help_text if defined?(help_text)
