- @title = 'Templates'

- content_for :header do
  .background-gradient
  .header-container
    .container
      %h1.page-heading
        .pull-right
          = link_to plus_or('New Template'), new_template_path, class: 'btn btn-accent btn-shadow'
          .per-page= render 'layouts/per_page', per_page: 40, object_count: @templates.total_count
        = @title
        = render 'search/toggle'

= render 'search/simple', url: templates_path

%table.table.table-striped
  %col
  %col{ width: '105px' }
  %thead
    %tr
      %th Name
      %th

  %tbody
    - @templates.each do |template|
      %tr
        %td= link_to template.name, template
        %td
          = link_to 'Edit', edit_template_path(template), class: 'btn btn-xs btn-default'
          = link_to 'Delete', template, method: :delete, data: { confirm: "Delete #{template.name}?" }, class: 'btn btn-xs btn-danger-inverse'

.center= paginate @templates, theme: 'bootstrap'
