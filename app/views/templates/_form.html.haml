= form_for @template, html: { class: 'form-horizontal' } do |f|
  - if @template.errors.any?
    .callout.callout-danger
      %strong
        = pluralize @template.errors.count, 'error'
        prohibited this template from being saved

      %ul
        - @template.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :name, class: 'col-md-2 control-label'
    .col-md-10
      = f.text_field :name, class: 'form-control'

  .form-group
    %label.col-md-2.control-label Items
    .col-md-10
      = link_to 'Add Item', add_item_templates_path, method: :post, remote: true, class: 'btn btn-xs btn-default', style: 'margin-top: 6px'
      #items{ data: { object: 'sortable' } }
        = hidden_field_tag 'template[item_ids][]', nil
        - @template.template_items.each do |template_item|
          = render 'template_items/form', template_item: template_item

  .form-group
    .col-md-10.col-md-offset-2
      = f.submit nil, class: 'btn btn-primary'
      = cancel
