<% @title = "Account: #{@account.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Edit Account", edit_account_path(@account), class: 'btn btn-mini' %>
    <%= link_to "Delete Account", @account, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: "Are you sure you want to delete Account #{@account.name}?" } %>
    <%= link_to "View Accounts", accounts_path, class: 'btn btn-mini' %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Current Balance</dt>
  <dd><%= @account.balance(:amount).to_currency %></dd>

  <dt>Total Spent</dt>
  <dd><%= @account.total_spent.to_currency %></dd>

  <dt>Charge Types</dt>
  <dd>
    <ul>
      <% @account.charge_types.each do |charge_type| %>
        <li><%= link_to charge_type.name, charge_type %></li>
      <% end %>
    </ul>
  </dd>
</dl>
