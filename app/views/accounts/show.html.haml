- @title = @account.name
.page-header
  %h1
    = link_to 'Accounts', accounts_path
    &middot;
    = @title
  = link_to 'Edit Account', edit_account_path(@account), class: 'btn btn-xs btn-default'
  = link_to 'Delete Account', @account, method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Account #{@account.name}?" }

%dl.dl-horizontal
  %dt Current Balance
  %dd= @account.balance(:amount).to_currency

  %dt Total Spent
  %dd= @account.total_spent.to_currency

  %dt Charge Types
  %dd
    %ul
      - @account.charge_types.each do |charge_type|
        %li= link_to charge_type.name, charge_type
