- @title = 'Accounts'

- content_for :header do
  .background-gradient
  .header-container
    .container
      %h1.page-heading
        = @title
        = link_to 'Create Account', new_account_path, class: 'btn btn-xs btn-accent'
        .per-page= render 'layouts/per_page', per_page: 40, object_count: @accounts.total_count

= form_tag accounts_path, method: :get, class: 'form-inline', style: 'margin-bottom: 20px' do
  = hidden_field_tag :order, params[:order]
  = text_field_tag 'search', params[:search], class: 'form-control'
  = submit_tag 'Search', class: 'btn btn-primary', name: nil
  = link_to 'Reset', accounts_path, class: 'btn btn-default'

= render 'accounts/accounts'
