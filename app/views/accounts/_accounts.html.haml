%table.table.table-striped.shadow
  %thead
    %tr
      %th Account Name
      %th Category
      %th Charge Types
      %th.center Archived
  %tbody
    - @accounts.each do |account|
      %tr
        %td= link_to account.name, account
        %td= account.category_name
        %td= account.charge_types.collect { |charge_type| link_to charge_type.name, charge_type }.join(', ').html_safe
        %td.center= simple_check account.archived?

.center= paginate @accounts, theme: 'bootstrap'
