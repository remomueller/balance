- @title = "Sign in"

.page-box.last-box.d-flex.flex-column.justify-content-center.background-p50-grey
  .container
    %p.lead.text-center Welcome back!

    .sign-up-form
      .sign-up-form-title
        Sign in

      = form_with model: resource, url: session_path(resource_name), local: true do |form|
        = render "forms/vertical/email_field", form: form, object: resource, key: :email

        .form-group
          = form.label :password
          %small= link_to "(Forgot password?)", new_password_path(resource_name), tabindex: "-1"
          = form.password_field :password, class: "form-control#{" is-invalid" if flash[:alert].present?}", autocomplete: "current-password"
          - if flash[:alert].present?
            .invalid-feedback= flash[:alert].html_safe

        .form-group.submit-btn-container
          = form.submit "Sign in", class: "btn btn-primary btn-block"

        - flash[:alert] = nil

    .sign-up-form.text-center
      New to
      = succeed "?" do
        = ENV["website_name"]
      = link_to "Create an account.", new_user_registration_path
