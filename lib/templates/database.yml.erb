# MySQL.  Versions 4.1 and 5.0 are recommended.
#
# Install the MySQL driver:
#   gem install mysql2
#
# And be sure to use new-style password hashing:
#   http://dev.mysql.com/doc/refman/5.0/en/old-client.html
development:
  adapter: mysql2
  encoding: utf8
  reconnect: false
  database: balance_development
  pool: 5
  username: <%= print "Enter Database Username [username]: "; u = gets.chomp(); if u == '' then u = 'username' end; u %>
  password: <%= print "Enter Database Password [password]: "; p = gets.chomp(); if p == '' then p = 'password' end; p %>
  socket: <%= print "Enter Database Socket [/tmp/mysql.sock]: "; s = gets.chomp(); if s == '' then s = '/tmp/mysql.sock' end; s %>
  host: <%= print "Enter Database Host: "; h = gets.chomp(); h %>

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test:
  adapter: mysql2
  encoding: utf8
  reconnect: false
  database: balance_test
  pool: 5
  username: <%= u %>
  password: <%= p %>
  socket: <%= s %>
  host: <%= h %>

production:
  adapter: mysql2
  encoding: utf8
  reconnect: false
  database: balance_production
  pool: 5
  username: <%= u %>
  password: <%= p %>
  socket: <%= s %>
  host: <%= h %>
